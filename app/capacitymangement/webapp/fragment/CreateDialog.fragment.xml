<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateProduc33tDialog"
        resizable="true"
        draggable="true"
        contentWidth="20%"
        contentHeight="30%"
        title="Create Product"
    >
        <beginButton>
            <Button
                id="idCreate22Button"
                text="Create"
                press="onCreateStar"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelBu22tton"
                text="Cancel"
                press="onCancelInCreateProductDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idStarDetail22sForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idProductNoLabel"
                    text="Product Number"
                />
                <Input
                    id="idProductNoInput"
                    value="{ProductModel>/sapProductno}"
                />

                <Label
                    id="idLengthLabel"
                    text="Length"
                />
                <Input
                    id="idLengthInput"
                    value="{ProductModel>/length}"
                />

                <Label
                    id="idWidthLabel"
                    text="Width"
                />
                <Input
                    id="idWidthInput"
                    value="{ProductModel>/width}"
                />

                <Label
                    id="idHeightLabel"
                    text="Height"
                />
                <Input
                    id="idHeightInput"
                    value="{ProductModel>/height}"
                />

                <Label
                    id="idVolumeLabel"
                    text="Volume"
                />
                <Input
                    id="idVolumeInput"
                    value="{ProductModel>/volume}"
                />

                <Label
                    id="idUomLabel"
                    text="Unit of Measure"
                />
                <Input
                    id="idUomInput"
                    value="{ProductModel>/uom}"
                />

                <Label
                    id="idCategoryLabel"
                    text="Category"
                />
                <Input
                    id="idCategoryInput"
                    value="{ProductModel>/mCategory}"
                />

                <Label
                    id="idDescriptionLabel"
                    text="Description"
                />
                <Input
                    id="idDescriptionInput"
                    value="{ProductModel>/description}"
                />

                <Label
                    id="idEANUPCLabel"
                    text="EAN/UPC"
                />
                <Input
                    id="idEANUPCInput"
                    value="{ProductModel>/EANUPC}"
                />

                <Label
                    id="idWeightLabel"
                    text="Weight"
                />
                <Input
                    id="idWeightInput"
                    value="{ProductModel>/weight}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
