<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="truckLoadingDialog"
        title="Truck Loading Details"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
    >
        <content>
            <VBox id="_IDGenVBox1">
                <Text
                    id="_IDGenText7"
                    text="Overall Total Volume: {resultModel>/OverallTotalVolume}"
                />

                <Title
                    id="_IDGenTitle"
                    text="Selected Products:{resultModel>/TProducts}"
                    level="H2"
                />
                <List
                    id="_IDGenList"
                    items="{resultModel>/Products}"
                >
                    <items>
                        <StandardListItem
                            id="_IDGenStandardListItem"
                            title="{resultModel>Product}"
                            description="{resultModel>Description}"
                            info="{resultModel>Quantity} units, Volume: {resultModel>Volume} "
                        />
                    </items>
                </List>

                <Title
                    id="_IDGenTitle1"
                    text="Required Trucks"
                    level="H2"
                />
                <List
                    id="_IDGenList1"
                    items="{resultModel>/RequiredTrucks}"
                >
                    <items>
                        <StandardListItem
                            id="_IDGenStandardListItem1"
                            title="{resultModel>truckType}"
                            info="{resultModel>numberOfTrucksNeeded} truck(s) needed, Volume: {resultModel>volume}"
                        />
                    </items>
                </List>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="_IDGenButton1"
                text="Close"
                press="onTruckDialogClose"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
