<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
  
            <VBox id="_IDGenVBox1">
                <Title
                    id="_IDGenTitle"
                    text="Selected Products:{resultModel>/TProducts}"
                    level="H2"
                />
                <Text
                    id="_IDGenText7"
                    text="Total Volume : {resultModel>/OverallTotalVolume}m3"
                />

                <List
                    id="_IDGenList"
                    items="{resultModel>/Products}"
                    growing="true"
                >
                    <items>
                        <StandardListItem
                            id="_IDGenStandardListItem"
                            title="{resultModel>Product}"
                            description="{resultModel>Description}"
                            info="{resultModel>Quantity} units, Volume: {resultModel>Volume}"
                        />
                    </items>
                </List>

                <Title
                    id="_IDGenTitle1"
                    text="Required Trucks For Loading Products"
                    level="H2"
                />
                <List
                    id="_IDGenList1"
                    items="{resultModel>/RequiredTrucks}"
                >
                    <items>
                        <StandardListItem
                            id="_IDGenStandardListItem1"
                            title="{resultModel>truckType}"
                            info="{resultModel>numberOfTrucksNeeded} truck(s) needed, Volume: {resultModel>volume}"
                        />
                    </items>
                </List>
            </VBox>
         
     
</core:FragmentDefinition>
