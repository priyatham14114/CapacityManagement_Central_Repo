<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateInAddddEquipmentDialog"
        resizable="true"
        draggable="true"
        contentWidth="20%"
        contentHeight="30%"
        title="Create Vehicle"
    >
        <beginButton>
            <Button
                id="idCreatnwwjkeButton"
                text="Create"
                press="onCreateVeh"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancwwkelButton"
                text="Cancel"
                press="onCancelInCreateVehicleDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idStabnrDwwetanmilsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idTruckTypeLabel"
                    text="Truck Type"
                />

                <Input
                    id="idTruckTypeInput"
                    value="{VehModel>/truckType}"
                />

                <Label
                    id="idLengthLabelveh"
                    text="Length"
                />

                <Input
                    id="idLengthInputVeh"
                    value="{VehModel>/length}"
                />

                <Label
                    id="idWidthLabelVeh"
                    text="Width"
                />

                <Input
                    id="idWidthInputveh"
                    value="{VehModel>/width}"
                />

                <Label
                    id="idHeightLabelveh"
                    text="Height"
                />

                <Input
                    id="idHeightInputveh"
                    value="{VehModel>/height}"
                />

                <Label
                    id="idUomLabelveh"
                    text="Unit of Measure (UOM)"
                />

                <!-- <Input
                    id="idUomInputveh"
                    value="{VehModel>/uom}"
                /> -->
                <Select id="idvehtypeUOM">
                    <core:Item
                        id="id0"
                        key=""
                        text=""
                    />
                    <core:Item
                        id="id1"
                        key="M"
                        text="M"
                    />
                    <!-- <core:Item
                        id="id2"
                        key="L"
                        text="L"
                    /> -->
                </Select>

                <!-- <Label
                    id="idVolumeLabelveh"
                    text="Volume"
                />

                <Input
                    id="idVolumeInputveh"
                    value="{VehModel>/volume}"
                /> -->

                <Label
                    id="idTruckWeightLabel"
                    text="Truck Weight"
                />

                <Input
                    id="idTruckWeightInput"
                    value="{VehModel>/truckWeight}"
                />

                <Label
                    id="idCapacityLabel"
                    text="Capacity"
                />

                <Input
                    id="idCapacityInput"
                    value="{VehModel>/capacity}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
